############################################################
# Sample .env for Country Currency & Exchange API          #
############################################################

# Database configuration
# MySQL (may require mysqlclient or mysql-connector):
DATABASE_URL=mysql+mysqlconnector://USER:PASSWORD@HOST:3306/DBNAME

# Server settings
PORT=8000
LOG_LEVEL=INFO
CONSOLE_LOG_LEVEL=INFO

# External APIs
COUNTRY_API=https://restcountries.com/v2/all?fields=name,capital,region,population,flag,currencies
EXCHANGE_API=https://open.er-api.com/v6/latest/USD

# Optional: Redis for rate limiting
REDIS_URL=redis://localhost:6379/0

# Optional: Rate limit tuning (defaults)
RATE_LIMIT_DEFAULT_TIMES=60
RATE_LIMIT_DEFAULT_SECONDS=60
RATE_LIMIT_REFRESH_TIMES=10
RATE_LIMIT_REFRESH_SECONDS=60
RATE_LIMIT_IMAGE_TIMES=30
RATE_LIMIT_IMAGE_SECONDS=60
