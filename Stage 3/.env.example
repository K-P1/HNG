# Environment configuration for Reflective Assistant
DATABASE_URL=sqlite:///./app.db

# Optional: API keys for LLM providers
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile

# App settings
ENV=development
LLM_PROVIDER=groq
DEBUG=true
# A2A agent name (used to build the route at /a2a/agent/<AGENT_NAME>)
A2A_AGENT_NAME=reflectiveAssistant